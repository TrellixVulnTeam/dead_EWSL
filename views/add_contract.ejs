<link rel="stylesheet" type="text/css" href="css/profile.css">
<div class="login">
  <div class="login-body">
    <h3 class="login-heading">Формирование Трудового Договора</h3>
    <hr>
    <div class="login-form">
      <div class="form-group">
        <ul class="list-inline">
          <li>
            <small>Персональная информация</small>
          </li>
        </ul>
      </div>
      <div class="form-group">
        <ul class="col-sm-5">
            <label for="date">Дата: </label>
            <input id="date" class="form-control" type="date">
            <label for="num">Номер: </label>
            <input id="num" class="form-control" type="number" min = "0">
            <label for="name">Имя: </label>
            <input id="name" class="form-control" type="text">
            <label for="surname">Фамилия: </label>
            <input id="surname" class="form-control" type="text">
            <label for="second_name">Отчество: </label>
            <input id="middle_name" class="form-control" type="text">
            <br><label>Учёная Степень: </label>
            <select id="degree"></select>
            <br><label>Группа: </label>
            <select id="groups"></select>
            <br><label>Предмет: </label>
            <select id="items"></select>
            <br><label for="input1">Выделенная почасовая нагрузка: </label>
            <input name="input" checked id="input1" class="form-control" type="radio">
            <br><label for="input2">Почасовая нагрузка по замене: </label>
            <input name="input" id="input2" class="form-control" type="radio">
            <div class="input2_block" style="display: none">
              <label for="input_name">ФИО: </label>
              <input id="input_name" class="form-control" type="text">
              <label for="input_date">Дата: </label>
              <input id="input_date" class="form-control" type="date">
              <label for="input_num">Номер: </label>
              <input id="input_num" class="form-control" type="number" min = "0">
            </div>
          <hr>
            <label>Часы: </label>
          <%
          var words = [
            'Проведение лекционных занятий',
            'Проведение лабораторных занятий',
            'Курсовое проектирование',
            'Проведение практических занятий',
            'Консультации',
            'Проверка контрольных работ',
            'Приём зачётов',
            'Приём экзаменов',
            'Индивидуальная работа для ОП',
            'Дипломное проектирование',
            'Работа в ГЭК',
            'Руководство аспирантами',
            'Руководство практикой',
            'Другие виды работ'
          ];

            for(var i = 0; i < words.length; i++){
              %>
              <label><%=words[i]%>: </label>
              <input class="form-control words" type="number" min = "0" placeholder="Введите кол-во часов">
              <%
            }
          %>
          <br>
          <hr>
          <br>
          <div class="btn btn-success btn-block" id="add_contract">Создать договор</div>
          <br>
        </ul>
      </div>
    </div>
  </div>
</div>
<script type="text/javascript" src="js/add_contract.js"></script>
